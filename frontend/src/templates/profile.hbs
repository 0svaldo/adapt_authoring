<div class="row">
  <div class="main">
    <form role="form">

      <div class="form-group">
        <label for="inputEmail">Email</label>
        <p class="form-control-static">{{ email }}</p>
      </div>
      <div class="form-group">
        <label for="inputAuth" class="control-label">Authentication</label>
        <input type="text" class="form-control" id="inputAuth" value="{{ auth }}">
      </div>
      <div class="form-group">
        <label for="inputPassword" class="control-label">Password</label>
        <input type="password" class="form-control" id="inputPassword" >
      </div>
      <div class="form-group">
        <label for="confirmPassword" class="control-label">Confirm Password</label>
        <input type="password" class="form-control" id="confirmPassword">
      </div>
      <div class="form-group">
        <label for="inputTenant" class="control-label">Tenant</label>
        <input type="text" class="form-control" id="inputTenant" value="{{ tenant }}">
      </div>

      <button id="submitBtn" type="submit" class="btn btn-success">
        Save
      </button>
      <button id="cancelBtn" type="button" class="btn btn-danger">
        Cancel
      </button>

    </form>
  </div>
</div>
