<div id="projectDetail">
  <div class="row">
    <form role="form" class="col-md-8 col-md-offset-3">
      <div class="form-group">
        <label for="projectDetailTitle">{{t 'app.projecttitle'}}</label>
        <input type="text" class="form-control" id="projectDetailTitle" placeholder="{{t 'app.projecttitle'}}" value="{{ title }}">
      </div>
      <div class="form-group">
        <label for="projectDetailDescription">{{t 'app.projectdescription'}}</label>
        <textarea class="form-control" id="projectDetailDescription" placeholder="{{t 'app.projectdescription'}}">{{ body }}</textarea>
      </div>
      <div class="hidden">
        <input type="hidden" value="{{ id }}" id="projectDetailId">
      </div>
      <button id="saveButton" type="submit" class="btn btn-success">{{t 'app.save'}}</button>
      <button id="cancelButton" type="button" class="btn">{{t 'app.cancel'}}</button>
    </form>
  </div>
</div>