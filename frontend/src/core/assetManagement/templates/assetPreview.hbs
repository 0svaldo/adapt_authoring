{{title}}

{{#if_value_equals assetType "image"}}
  <img src="/assets/{{_id}}"/>
{{/if_value_equals}}

{{#if_value_equals assetType "video"}}
  <video preload="none" width="640px" height="360px" poster="" style="width:100%; height:100%;">
    <source src="/assets/{{_id}}" type="{{mimeType}}"/>
  </video>
{{/if_value_equals}}

{{#if_value_equals assetType "audio"}}
  <audio id="player2" src="/assets/{{_id}}" type="{{mimeType}}" controls="controls"></audio>
{{/if_value_equals}}
