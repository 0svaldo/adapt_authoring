<div class="page-inner">
    <div class="page-detail">

        <h4 class="page-name">
            {{#if displayTitle}}
                {{{displayTitle}}}
            {{else}}
                {{title}}
            {{/if}}
        </h4>

        <div class="page-body">{{{body}}}</div>

    </div>

    <div class="page-articles"></div>

    <div class="add-control">
        <a href="#" class="btn btn-primary add-article">{{t 'app.addarticle'}}</a>
    </div>

</div>
