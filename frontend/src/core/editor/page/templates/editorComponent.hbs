{{>part_editorItemSidebar}}

<div class="component-inner">

    <div class="component-detail unselectable">
        {{#if _componentType}}
        <div class="component-type">[{{_componentType.displayName}}]</div>
        {{/if}}
        <h4 class="component-title">
            {{#if displayTitle}}
                {{{displayTitle}}}
            {{else}}
                {{title}}
            {{/if}}
        </h4>
        <div class="component-body">{{{body}}}</div>
        
    </div>

</div>