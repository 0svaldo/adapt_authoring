<div class="component-edit">
    <div class="editing-overlay-panel">
        <a href="#" class="editing-overlay-panel-title active">
            <div class="editing-overlay-panel-title-inner">
                <h2>Content</h2>
            </div>
        </a>
        <div class="editing-overlay-panel-content">
            <div class="editing-overlay-panel-content-inner">
                <form role="form">
                  <div class="form-group">
                    <label for="component-title">Component Title</label>
                    <input type="text" class="form-control component-title" placeholder="Component Title" value="{{title}}">
                  </div>
                  <div class="form-group">
                    <label for="component-description">Component Description</label>
                    <textarea class="form-control component-body" placeholder="Component Description">{{body}}</textarea>
                  </div>
