<div class="block-edit">
    <div class="editing-overlay-panel">
        <a href="#" class="editing-overlay-panel-title active">
            <div class="editing-overlay-panel-title-inner">
                <h2>Content</h2>
            </div>
        </a>
        <div class="editing-overlay-panel-content">
            <div class="editing-overlay-panel-content-inner">
                <form role="form">
                  <div class="form-group">
                    <label for="block-title">Block Title</label>
                    <input type="text" class="form-control block-title" placeholder="Block Title" value="{{title}}">
                  </div>
                  <div class="form-group">
                    <label for="block-description">Block Description</label>
                    <textarea class="form-control block-body" placeholder="Block Description">{{body}}</textarea>
                  </div>
                  <div class="hidden">
                    <input type="hidden" value="{{id}}" id="pageId">
                  </div>
                </form>
            </div>
        </div>
    </div>
    <div class="editing-overlay-panel">
        <a href="#" class="editing-overlay-panel-title">
            <div class="editing-overlay-panel-title-inner">
                <h2>Extensions</h2>
            </div>
        </a>
        <div class="editing-overlay-panel-content editing-overlay-panel-collapsed">
            <div class="editing-overlay-panel-content-inner">
                <form>
                    <div class="form-group">
                        <label for="page-title">Page Title</label>
                        <input type="text" class="form-control page-title" placeholder="Page Title" value="{{title}}">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>