<div class="row">
  <form role="form">
    <div class="form-group">
      <label for="block-title">Block Title</label>
      <input type="text" class="form-control block-title" placeholder="Block Title" value="{{title}}">
    </div>
    <div class="form-group">
      <label for="block-description">Block Description</label>
      <textarea class="form-control block-body" placeholder="Block Description">{{body}}</textarea>
    </div>
    <div class="hidden">
      <input type="hidden" value="{{id}}" id="pageId">
    </div>
    <button class="save-button" type="submit">Save</button>
    <button class="cancel-button" type="button">Cancel</button>
  </form>
</div>
