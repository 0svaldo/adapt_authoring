<div class="block-detail">
  <h4 class="block-title">{{title}}</h4>
  <div class="block-body">{{body}}</div>
  
  <div class="page-article-components"></div>

  <div class="block-edit-panel">
    <a href="#" class="copy-block">{{t 'app.copy'}}</a>
    <a href="#" class="paste display-none">{{t 'app.paste'}}</a>
    <a href="#" class="block-edit">{{t 'app.edit'}}</a>
    <a href="#" class="block-delete">{{t 'app.delete'}}</a>
  </div>

  <div class="add-control">
    <a href="#" class="add-component">{{t 'app.addcomponent'}}</a>
  </div>

  <div class="paste-zone paste-zone-component component display-none">
    <a href="#" class="paste-component">{{t 'app.paste'}}</a>
    <a href="#" class="paste-cancel">{{t 'app.cancel'}}</a>
  </div>

</div>