<div class="block-detail">
  <h4 class="block-title">{{{title}}}</h4>
  <div class="block-body">{{{body}}}</div>

  <div class="page-article-components">
    {{#if _hasPasteZone}}
      {{#if _pasteZoneShowAll}}
      <div class="paste-zone paste-zone-wrapper paste-zone-component display-none">
      {{/if}}

        <div class="paste-zone paste-zone-component paste-zone-component-{{_pasteZoneLayout}} display-none">
          <a href="#" class="paste-component" data-paste-layout="{{_pasteZoneLayout}}">{{t 'app.paste'}}</a>
          <a href="#" class="paste-cancel">{{t 'app.cancel'}}</a>
        </div>

        {{#if _pasteZoneShowAll}}
          <div class="paste-zone paste-zone-component paste-zone-component-left display-none">
            <a href="#" class="paste-component" data-paste-layout="left">{{t 'app.paste'}}</a>
            <a href="#" class="paste-cancel">{{t 'app.cancel'}}</a>
          </div>
          <div class="paste-zone paste-zone-component paste-zone-component-right display-none">
            <a href="#" class="paste-component" data-paste-layout="right">{{t 'app.paste'}}</a>
            <a href="#" class="paste-cancel">{{t 'app.cancel'}}</a>
          </div>
        {{/if}}

      {{#if _pasteZoneShowAll}}
      </div>
      {{/if}}
    {{/if}}
  </div>

  <div class="block-edit-panel">
    <a href="#" class="copy-block">{{t 'app.copy'}}</a>
    <a href="#" class="paste display-none">{{t 'app.paste'}}</a>
    <a href="#" class="block-edit">{{t 'app.edit'}}</a>
    <a href="#" class="block-delete">{{t 'app.delete'}}</a>
  </div>

  {{#if layoutOptions}}
    <div class="add-control">
      <a href="#" class="add-component">{{t 'app.addcomponent'}}</a>
    </div>

    <div class="add-component-form">
       <select class="add-component-form-componentType">
        {{#each componentTypes}}
          <option value="{{name}}">{{name}}</option>
          {{else}}
          <option value="">--</option>
        {{/each}}
      </select>
      <select class="add-component-form-layout">
        {{#each layoutOptions}}
          <option value="{{type}}">{{t name}}</option>
        {{/each}}
      </select>
    </div>
  {{/if}}

</div>
