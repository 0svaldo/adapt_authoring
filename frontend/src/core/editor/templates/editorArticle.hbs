  <div class="page-article-body">{{body}}</div>
  
  <div class="page-article-blocks"></div>
  
  <div class="page-article-edit-panel">
    <a href="#" class="add-block">[+ Add block]</a>
    <a href="#" class="copy-article">Copy</a>
    <a href="#" class="page-article-edit">[Edit]</a>
    <a href="#" class="page-article-delete">[Delete]</a>
  </div>

  <div class="paste-zone paste-zone-block block display-none">
