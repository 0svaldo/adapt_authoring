<div class="editor-menu-layer-controls clearfix">
{{#if _isCourseObject}}
{{else}}
  <button class="editor-menu-layer-add-page editor-menu-layer-button btn"><i class="fa fa-file-o fa-1x"></i>{{t 'app.addpage'}}</button>
  <button class="editor-menu-layer-add-menu editor-menu-layer-button btn"><i class="fa fa-folder-o fa-1x"></i> {{t 'app.addsection'}}</button>
{{/if}}
</div>
<div class="editor-menu-layer-inner">
  <div class="editor-menu-layer-actions units-row paste-zone visibility-hidden">
    <button class="editor-menu-layer-paste btn unit-50">{{t 'app.paste'}}</button>
    <button class="editor-menu-layer-paste-cancel btn unit-50">{{t 'app.cancel'}}</button>
  </div>
</div>